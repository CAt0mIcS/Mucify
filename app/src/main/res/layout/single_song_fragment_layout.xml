<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232628">

    <TextView
        android:id="@+id/ssf_lblSongName"
        android:layout_width="362dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:clickable="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ssf_btnOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:onClick="onSongOpen"
        android:text="@string/open_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ssf_btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLoopSave"
        android:text="@string/save_btn"
        app:layout_constraintStart_toEndOf="@+id/ssf_btnLoad"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ssf_btnLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLoopLoad"
        android:text="@string/load_btn"
        app:layout_constraintStart_toEndOf="@+id/ssf_btnOpen"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/ssf_sbStartTime"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="10dp"
        android:progressTint="#03dac4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbProgress" />

    <SeekBar
        android:id="@+id/ssf_sbEndTime"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="10dp"
        android:progressTint="#03dac4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbStartTime" />

    <SeekBar
        android:id="@+id/ssf_sbProgress"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:progressTint="#03dac4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_lblSongName" />

    <TextView
        android:id="@+id/ssf_lblProgress"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:layout_width="383dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbProgress" />

    <Button
        android:id="@+id/ssf_btnStartTimeDec"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Dec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbStartTime" />

    <Button
        android:id="@+id/ssf_btnEndTimeDec"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Dec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbEndTime" />

    <ImageButton
        android:id="@+id/ssf_btnPause"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginTop="36dp"
        android:background="@null"
        android:contentDescription="Pause"
        android:onClick="onPausePlayClick"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_lblEndTime"
        app:srcCompat="@drawable/ic_play_pause_btn" />

    <Button
        android:id="@+id/ssf_btnStartTimeInc"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Inc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbStartTime" />

    <Button
        android:id="@+id/ssf_btnEndTimeInc"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Inc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbEndTime" />

    <EditText
        android:id="@+id/ssf_txtInterval"
        android:layout_width="190dp"
        android:layout_height="32dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="number"
        android:text="500"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/ssf_sbStartTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ssf_lblTxtInterval"
        android:layout_width="231dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:text="Inc/Dec Interval"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/ssf_txtInterval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ssf_lblStartTime"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:layout_width="207dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/ssf_btnStartTimeInc"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toEndOf="@+id/ssf_btnStartTimeDec"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbStartTime" />

    <TextView
        android:id="@+id/ssf_lblEndTime"
        android:layout_marginStart="10dp"
        android:paddingStart="10dp"
        android:layout_width="207dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/ssf_btnEndTimeInc"
        app:layout_constraintStart_toEndOf="@+id/ssf_btnEndTimeDec"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbEndTime" />

</androidx.constraintlayout.widget.ConstraintLayout>