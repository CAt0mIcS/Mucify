<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232628">

    <TextView
        android:id="@+id/ssf_lblSongName"
        android:layout_width="362dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:clickable="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ssf_btnOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:onClick="onSongOpen"
        android:text="@string/open_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ssf_btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLoopSave"
        android:text="@string/save_btn"
        app:layout_constraintStart_toEndOf="@+id/ssf_btnLoad"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ssf_btnLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLoopLoad"
        android:text="@string/load_btn"
        app:layout_constraintStart_toEndOf="@+id/ssf_btnOpen"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/ssf_sbStartTime"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginTop="104dp"
        android:progressTint="#03dac4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbProgress" />

    <SeekBar
        android:id="@+id/ssf_sbEndTime"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:progressTint="#03dac4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_sbStartTime" />

    <SeekBar
        android:id="@+id/ssf_sbProgress"
        android:layout_width="381dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:progressTint="#03dac4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssf_lblSongName" />

</androidx.constraintlayout.widget.ConstraintLayout>