<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <ImageView
            android:id="@+id/recycler_song_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/song_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/playlist_item_song_title"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/recycler_song_image"
            app:layout_constraintTop_toTopOf="@id/recycler_song_image"
            app:layout_constraintBottom_toBottomOf="@id/recycler_song_image"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playlist_item_song_artist"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="@id/song_title"
            app:layout_constraintTop_toBottomOf="@id/song_title"
            android:layout_marginLeft="16dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playlist_item_song_length"
            app:layout_constraintTop_toTopOf="@id/recycler_song_image"
            app:layout_constraintBottom_toBottomOf="@id/recycler_song_image"
            app:layout_constraintLeft_toRightOf="@id/recycler_song_image"
            android:textSize="12sp"
            android:layout_marginLeft="260dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>