<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rvCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/round_ripple"
    android:background="@drawable/recycler_round_corner"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/rvLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/round_ripple"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        app:layout_dodgeInsetEdges="right"
        android:layout_marginLeft="48dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/txtArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginBottom="6dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/chkItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:checked="false"
        android:visibility="invisible"
        app:layout_insetEdge="right" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>