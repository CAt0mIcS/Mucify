<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_dodgeInsetEdges="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/s_txtAudioUpdateInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textSize="16sp"
            tools:text="Audio Update Interval" />

        <EditText
            android:id="@+id/s_editAudioUpdateInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:ems="10"
            android:inputType="number"/>

        <TextView
            android:id="@+id/s_txtSongIncDecInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="32dp"
            android:textSize="16sp"
            tools:text="Song Inc/Dec Interval" />

        <EditText
            android:id="@+id/s_editSongIncDecInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:ems="10"
            android:inputType="number"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/s_swRandomizePlaylistOrder"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="32dp"
            android:layout_height="wrap_content"
            android:text="Randomize Playlist Order"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/s_swUseAudioFocus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Keep Playing If Audio Focus Is Lost"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btmNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:menu="@menu/bottom_nav_menu"
        app:elevation="8dp"
        app:labelVisibilityMode="labeled"
        android:layout_gravity="bottom"
        app:layout_insetEdge="bottom"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>